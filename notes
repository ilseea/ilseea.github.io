/*navigation css*/
nav button {
    margin: .2rem 2%;
    background-color: transparent;
    border: none;
    font-size: 1.6rem;
    color: rgb(0, 0, 0);
}

nav {
    margin: 1rem;
    background-color: rgb(69, 123, 157);
    font-family: 'Berkshire Swash', cursive;
    text-align: center;
    box-shadow: 3px 6px 12px rgb(39, 26, 2);
}

nav ul {
    list-style-type: none;
}

nav ul li a {
    display: block;
    padding: 1em;
    text-decoration: none;
    color: rgba(255, 255, 255, 0.8);
    border-top: 1px solid rgba(0, 0, 0, 0.3);
}

nav ul li a:hover {
    background-color: rgb(230, 57, 70);

}

nav ul li.active a {
    background-color: rgba(230, 57, 70, 0.4);
}

nav ul.hide {
    display: none;
}



